@model Nest.API.Models.Post

<div class="card well-sm bg-light mb-2">
    <div class="card-body">
       @if (Model.Title != "") {
            <h5 class="card-title">@Model.Title</h5>
        }
        <p class="card-text">@Model.Message</p>
        <p class="small text-muted">Posted by @Model.User.Handle on @Model.Timestamp.ToString("H:mm MMMM dd, yyyy") in @(Model.Channel == null ? Html.ActionLink("Archived", "Feed", new { category = "", page = 1 }) : Html.ActionLink((string)Model.Channel.Name, "Feed", new { category = Model.Channel.Name, page = 1 }))</p>
    </div>
</div>
