@model Nest.ViewModels.ChannelMenuViewModel

@Html.ActionLink("Feed", "Feed", "Post", new { page = 1 },
 new { @class = "btn btn-block btn-lg" + ((Model.Current == "" || Model.Current == null) ? " btn-warning" : " btn-light") })

@foreach (var channel in Model.Channels) {
    @Html.RouteLink(
        channel.Name,
        new { controller = "Post", action = "Feed", category = (string) channel.Name, page = 1 },
        new { @class = "btn btn-block btn-lg" + (channel.Name == Model.Current ? " btn-warning" : " btn-light") }
    )
}
